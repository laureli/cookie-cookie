/* extensions for fun */

{
	"name": "A cookiehuntr: starts a cookie swap when clicked",
	"version": "0.0.1",
	"background":{
		"scripts": [
			"popup.js",
			"jquery.min.js",
			"ext_backbone.js",
			"background.js"
		],
		"pages": [
			// "manager.html",
			"background.html",
			"fuzzy.html"
		]
	},
	"permissions": [
		"cookies",
		"storage",
		"<all_urls>",
	    "http://localhost/*",
	    "tabs",
	    "http://*/*"
		],
	"browser_action":{
		"name":"clicking initiates the cookie swap", 
		"default_popup":"popup.html"  
	},
	
	"manifest_version":2

}