/*
let's make this extension happen!
*/

{
	"name": "extension starts a cookie swap when clicked",
	"version": "0.0.1",
	"background":{
		"scripts": [
			"jquery.min.js",
			"background.js",
			"foundation.js",
			"ext_backbone.js"
		],
		"pages": [
			"background.html",
			"fuzzy.html"
		]
	},
	"permissions": [
		"cookies",
		"<all_urls>",
	    "http://localhost/*",
	    "tabs",
	    "http://*/*"
		],
	"browser_action":{
		"name":"clicking initiates the cookie swap"
			// "default_popup":"popup.html"  
			// if there is a default popup then it takes priority?
				// use the popup as a navigation pane later.
	},
	"manifest_version":2

}